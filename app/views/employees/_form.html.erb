<%= form_with(model: @employee, local: true) do |f| %>

<% if @employee.errors.any? %>
  <p>One or more errors prevented the form from submitting</p>
  <ul>
  <% @employee.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>


  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.submit %>
<% end %>
